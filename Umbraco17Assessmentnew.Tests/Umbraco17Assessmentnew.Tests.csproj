<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <IsPackable>false</IsPackable>
    <RootNamespace>Umbraco17Assessment.Tests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="xunit" Version="2.*" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.*">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.*" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference only the Services from the main project via shared source -->
    <Compile Include="..\Umbraco17Assessment\Services\IReadingTimeService.cs" Link="Services\IReadingTimeService.cs" />
    <Compile Include="..\Umbraco17Assessment\Services\ReadingTimeService.cs" Link="Services\ReadingTimeService.cs" />
  </ItemGroup>

</Project>
